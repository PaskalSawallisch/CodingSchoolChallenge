import java.util.Scanner;

public class StringUmkehren {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        
        // Benutzer zur Eingabe eines Strings auffordern
        System.out.print("Bitte geben Sie einen String ein: ");
        String input = scanner.nextLine();
        
        // Umgekehrten String berechnen
        String reversed = reverseString(input);
        
        // Umgekehrten String ausgeben
        System.out.println("Der umgekehrte String ist: " + reversed);
    }

    // Methode, die einen String in umgekehrter Reihenfolge zur端ckgibt
    public static String reverseString(String str) {
        // StringBuilder f端r effizientes String-Manipulation verwenden
        StringBuilder reversed = new StringBuilder();
        
        // Von hinten nach vorne durch den String iterieren
        for (int i = str.length() - 1; i >= 0; i--) {
            // Zeichen an der aktuellen Position hinzuf端gen
            reversed.append(str.charAt(i));
        }
        
        // Ergebnis als String zur端ckgeben
        return reversed.toString();
    }
}
